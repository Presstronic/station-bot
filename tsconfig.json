{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
    },
    "include": ["src/**/*"]
  }
  